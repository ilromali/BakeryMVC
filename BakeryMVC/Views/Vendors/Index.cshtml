@{
  Layout = "_Layout";
}

@using BakeryMVC.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <li>@vendor.VendorDescription</li>
}

<h3><a href="vendors/new">Add a new vendor.</a></h3>
<h6><a href="/orders/delete">Delete all orders.</a></h6>