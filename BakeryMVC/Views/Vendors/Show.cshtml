@using BakeryMVC.Models;
@{
  Layout = "_Layout";
}

<h3>Here are all your current vendors:</h3>

<ol>
  @foreach (var order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new vendor</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>