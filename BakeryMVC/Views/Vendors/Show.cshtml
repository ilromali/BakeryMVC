@{
  Layout = "_Layout";
}

@using BakeryMVC.Models;

<div class="container">
  <div class="jumbotron">
    <h3>Vendor Details:</h3>
  </div>
  @* @Model["vendor"].vendorName
  @Model["vendor"].vendorDescription *@

  <h3>Vendor Orders:</h3>
  @if (@Model["orders"].Count == 0) 
  {
    <h3>No orders have been added for this vendor yet.</h3>
  }
  
  <h3><a href='/vendors/@Model["vendor"].Id/orders/new'>Add New Order to Vendor</a></h3>
  <ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.OrderId'>@order.OrderTitle</a></li>
  }
  </ol>

  <hr>
  <p><a href='/vendors'>Vendor list</a></p>
  <p><a href='/'>Main Page</a></p>
</div>