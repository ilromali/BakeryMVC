@{
    Layout = "_Layout";
}

@using BakeryMVC.Models;

<div class="container">
    <div class="jumbotron">
        <h1>Orders</h1>
    </div>

    <img src='~/img/croissants.jpg'>
    <hr>

    @if (@Model.Count == 0)
    {
        <h3>No orders have been added yet!</h3>
    }

    @foreach (Order order in Model)
    {
        <h3> - @order.OrderDescription</h3>
    }

    <h3><a href="/vendors">Add a new order to an existing vendor.</a></h3>
    <h3><a href="/vendors/new">Add a new order to a new vendor.</a></h3>
    <h6><a href="/orders/delete">Delete all orders.</a></h6>
    <hr>
    <h3><a href='/'>Main Page</a></h3>
    <hr>
</div>