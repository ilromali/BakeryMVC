@{
  Layout = "_Layout";
}

@using BakeryMVC.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
}

@foreach (Order order in Model)
{
  <li>@order.OrderDescription</li>
}

<h3><a href="vendors/orders/new">Add a new order.</a></h3>
<h6><a href="/orders/delete">Delete all orders.</a></h6>